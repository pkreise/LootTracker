<Window x:Class="LootTracker.AddPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LootTracker"
        mc:Ignorable="d"
        Title="AddPlayer" Height="192" Width="374">
    <Grid>
        <Button x:Name="button_Clear" Content="Clear" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top" Width="45" Height="25" Click="button_Clear_Click"/>
        <Button x:Name="button_Browse" Content="Browse" HorizontalAlignment="Left" Margin="65,115,0,0" VerticalAlignment="Top" Width="45" Height="25" Click="button_Browse_Click"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100">
            <Image x:Name="playerImage" Margin="1,1,1,1" Stretch="UniformToFill"/>
        </Border>
        <TextBlock x:Name="textBlock_Player" HorizontalAlignment="Left" Margin="121,14,0,0" TextWrapping="Wrap" Text="Player Name:" VerticalAlignment="Top" Width="86"/>
        <TextBlock x:Name="textBlock_Character" HorizontalAlignment="Left" Margin="121,35,0,0" TextWrapping="Wrap" Text="Character name:" VerticalAlignment="Top"/>
        <Button x:Name="button_OK" Content="OK" HorizontalAlignment="Left" Margin="280,85,0,0" VerticalAlignment="Top" Width="55" Height="25" IsEnabled="False" Click="button_OK_Click"/>
        <TextBox x:Name="textBox_Player" HorizontalAlignment="Left" Height="23" Margin="220,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" LostFocus="textBox_Player_LostFocus" GotFocus="textBox_Player_GotFocus"/>
        <TextBox x:Name="textBox_Character" HorizontalAlignment="Left" Height="23" Margin="220,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" GotFocus="textBox_Character_GotFocus" LostFocus="textBox_Character_LostFocus"/>
        <Button x:Name="button" Content="Cancel" HorizontalAlignment="Left" Margin="220,85,0,0" VerticalAlignment="Top" Width="55" Height="25" Click="button_Click"/>


    </Grid>
</Window>
