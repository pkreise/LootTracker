<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LootTracker"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="LootTracker.MainWindow"
        mc:Ignorable="d"
       Title="WoTR Loot Tracker" Height="700" Width="1000" Icon="LootTracker.ico" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" AllowsTransparency="True" WindowStyle="None">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="StyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="{DynamicResource darkgray_back}" MouseDown="Window_MouseDown">
        <TabControl x:Name="tabControl" Margin="10,42,10,12" BorderThickness="0,3,0,0" Foreground="{DynamicResource lightgray_fore}" Background="{DynamicResource darkgray_back}" FontSize="14" FontFamily="Segoe UI Semibold">
            <TabItem Header="Items" Width="80" Height="25" Margin="0,-2,0,0" VerticalAlignment="Top">
                <Grid>
                    <ListView x:Name="listView" ButtonBase.Click="GridViewColumnHeader_Clicked" Margin="0,31,-7,0" BorderThickness="0" SelectionMode="Single" ItemContainerStyle="{StaticResource myItemStyle}" SelectionChanged="listView_SelectionChanged">
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Add" Click="NewItem_Click"/>
                                <MenuItem Header="Remove" Click="DeleteItem_Click"/>
                                <Separator/>
                                <MenuItem Header="Increment"/>
                                <MenuItem Header="Decrement"/>
                                <MenuItem Header="Assign" Click="ModifiyAssignment_Click"/>
                            </ContextMenu>
                        </ListView.ContextMenu>
                        <ListView.View>
                            <GridView ColumnHeaderContainerStyle="{DynamicResource headers}">
                                <GridViewColumn Width="100" Header="Item Name" DisplayMemberBinding="{Binding itemname}"/>
                                <GridViewColumn Width="100" Header="Item Type" DisplayMemberBinding="{Binding loottype}"/>
                                <GridViewColumn Width="100" Header="Item Count" DisplayMemberBinding="{Binding count}"/>
                                <GridViewColumn Width="130" Header="Unassigned Count" DisplayMemberBinding="{Binding unassignedcount}"/>
                                <GridViewColumn Width="130" Header="Base Weight" DisplayMemberBinding="{Binding baseweight}"/>
                                <GridViewColumn Width="130" Header="Total Weight" DisplayMemberBinding="{Binding totalweight}"/>
                                <GridViewColumn Width="130" Header="Base Value" DisplayMemberBinding="{Binding basevalue}"/>
                                <GridViewColumn Width="130" Header="Total Value" DisplayMemberBinding="{Binding totalvalue}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="button_NewItem" Content="Add" HorizontalAlignment="Left" Margin="0,1,0,0" VerticalAlignment="Top" Width="48" Height="30" Foreground="#FFDEDEDE" Style="{StaticResource mybutton}" Click="NewItem_Click"/>
                    <Button x:Name="button_Delete" Content="Remove" HorizontalAlignment="Left" Margin="48,1,0,0" VerticalAlignment="Top" Width="75" Height="30" Foreground="#FFDEDEDE" Style="{StaticResource mybutton}" Click="DeleteItem_Click" IsEnabled="False"/>
                    <Button x:Name="button_Increment" Content="+" HorizontalAlignment="Left" Margin="188,0,0,0" VerticalAlignment="Top" Width="30" Height="30" Foreground="#FFDEDEDE" Style="{StaticResource mybutton}" IsEnabled="False" FontFamily="Segoe UI Black"/>
                    <Button x:Name="button_Decrement" Content="-" HorizontalAlignment="Left" Margin="218,1,0,0" VerticalAlignment="Top" Width="30" Height="30" Foreground="#FFDEDEDE" Style="{StaticResource mybutton}" IsEnabled="False" FontFamily="Segoe UI Black"/>
                    <Button x:Name="button_Assignments" Content="Assign" HorizontalAlignment="Left" Margin="123,0,0,0" Width="65" Height="30" Style="{StaticResource mybutton}" Foreground="#FFDEDEDE" IsEnabled="False" FontStyle="Italic" FontWeight="ExtraBlack" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Roster" Width="80" Foreground="{DynamicResource darkgray_back}" Background="{DynamicResource lightgray_fore}">
                <Grid Margin="0,1,0,-1">
                    <ComboBox x:Name="comboBox_Player" HorizontalAlignment="Left" Margin="143,0,0,0" VerticalAlignment="Top" Width="185" Height="30" BorderThickness="0" SelectionChanged="comboBox_SelectionChanged" Style="{StaticResource ComboBox_Dark}" ItemContainerStyle="{StaticResource mySimpleComboBoxItem}" Foreground="{DynamicResource lightgray_fore}"/>
                    <Button x:Name="button_AddPlayer" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="53" Click="button_AddPlayer_Click" Style="{StaticResource mybutton}" Foreground="#FFDEDEDE" Height="30" Margin="0"/>
                    <Border BorderBrush="{StaticResource lightgray_fore}" BorderThickness="1" HorizontalAlignment="Left" Height="209" Margin="10,53,0,0" VerticalAlignment="Top" Width="209">
                        <Image x:Name="image_PlayerImage" Margin="-1,-1,1,1"/>
                    </Border>
                    <TextBlock x:Name="textBlock_Ast" Margin="328,51,0,0" TextWrapping="Wrap" Text="Astral" Foreground="{DynamicResource lightgray_fore}" FontSize="16" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" LineHeight="22"/>
                    <TextBlock x:Name="textBlock_TtlGP" HorizontalAlignment="Left" Margin="328,231,0,0" TextWrapping="Wrap" Text="Total GP" VerticalAlignment="Top" Foreground="{DynamicResource lightgray_fore}" FontSize="16" Height="30" FontWeight="Bold" FontFamily="Segoe UI Black"/>
                    <TextBlock x:Name="textBlock_Cop" Margin="328,191,0,0" TextWrapping="Wrap" Text="Copper" Foreground="{DynamicResource lightgray_fore}" FontSize="16" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" LineHeight="22" Width="65"/>
                    <TextBlock x:Name="textBlock_Sil" Margin="328,156,0,0" TextWrapping="Wrap" Text="Silver" Foreground="{DynamicResource lightgray_fore}" FontSize="16" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" LineHeight="22"/>
                    <TextBlock x:Name="textBlock_Gld" Margin="328,121,0,0" TextWrapping="Wrap" Text="Gold" Foreground="{DynamicResource lightgray_fore}" FontSize="16" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" LineHeight="22"/>
                    <TextBlock x:Name="textBlock_Plt" Margin="328,86,0,0" TextWrapping="Wrap" Text="Platinum" Foreground="{DynamicResource lightgray_fore}" FontSize="16" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" LineHeight="22" RenderTransformOrigin="0.155,0.167"/>
                    <Button x:Name="button_ast_inc" Content="+" Margin="503,53,0,0" Width="25" Height="30" Style="{StaticResource button_Menu}" Foreground="#FFDEDEDE" HorizontalAlignment="Left" VerticalAlignment="Top" Click="button_ast_inc_Click"/>
                    <Button x:Name="button_sil_dec" Content="-" Margin="413,154,0,0" Width="25" BorderThickness="0" Style="{StaticResource button_Menu}" Foreground="#FFDEDEDE" FontFamily="Segoe UI Black" FontWeight="Bold" FontSize="20" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Click="button_sil_dec_Click"/>
                    <Button x:Name="button_cop_dec" Content="-" Margin="413,189,0,0" Width="25" BorderThickness="0" Style="{StaticResource button_Menu}" Foreground="#FFDEDEDE" FontFamily="Segoe UI Black" FontWeight="Bold" FontSize="20" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Click="button_plt_dec_Click"/>
                    <Button x:Name="button_gld_dec" Content="-" Margin="413,119,0,0" Width="25" BorderThickness="0" Style="{StaticResource button_Menu}" Foreground="#FFDEDEDE" FontFamily="Segoe UI Black" FontWeight="Bold" FontSize="20" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Click="button_cop_dec_Click"/>
                    <Button x:Name="button_plt_dec" Content="-" Margin="413,84,0,0" Width="25" BorderThickness="0" Style="{StaticResource button_Menu}" Foreground="#FFDEDEDE" FontFamily="Segoe UI Black" FontWeight="Bold" FontSize="20" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Click="button_gld_dec_Click"/>
                    <Button x:Name="button_ast_dec" Content="-" Margin="413,49,0,0" Width="25" BorderThickness="0" Style="{StaticResource button_Menu}" Foreground="#FFDEDEDE" FontFamily="Segoe UI Black" FontWeight="Bold" FontSize="20" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Click="button_plt_dec_Click"/>
                    <Button x:Name="button_cop_inc" Content="+" Margin="503,188,0,0" Width="25" Height="30" Style="{StaticResource button_Menu}" Foreground="#FFDEDEDE" HorizontalAlignment="Left" VerticalAlignment="Top" Click="button_cop_inc_Click"/>
                    <Button x:Name="button_sil_inc" Content="+" Margin="503,154,0,0" Width="25" Height="30" Style="{StaticResource button_Menu}" Foreground="#FFDEDEDE" HorizontalAlignment="Left" VerticalAlignment="Top" Click="button_sil_inc_Click"/>
                    <Button x:Name="button_gld_inc" Content="+" Margin="503,119,0,0" Width="25" Height="30" Style="{StaticResource button_Menu}" Foreground="#FFDEDEDE" HorizontalAlignment="Left" VerticalAlignment="Top" Click="button_gld_inc_Click"/>
                    <Button x:Name="button_plt_inc" Content="+" Margin="503,84,0,0" Width="25" Height="30" Style="{StaticResource button_Menu}" Foreground="#FFDEDEDE" HorizontalAlignment="Left" VerticalAlignment="Top" Click="button_plt_inc_Click"/>
                    <TextBox x:Name="textBox_ast_int" Height="30" Margin="438,49,0,0" Text="0" Width="65" SpellCheck.IsEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FF464646" BorderThickness="0" Foreground="#FFDEDEDE" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Cursor="IBeam" LostFocus="textBox_ast_int_LostFocus" MouseDoubleClick="textBox_ast_int_MouseDoubleClick"/>
                    <TextBox x:Name="textBox_cop_int" Height="30" Margin="438,188,0,0" Text="0" Width="65" SpellCheck.IsEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFDEDEDE" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF464646" BorderThickness="0" Cursor="IBeam" LostFocus="textBox_cop_int_LostFocus" MouseDoubleClick="textBox_cop_int_MouseDoubleClick"/>
                    <TextBox x:Name="textBox_sil_int" Height="30" Margin="438,152,0,0" Text="0" Width="65" SpellCheck.IsEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFDEDEDE" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF464646" BorderThickness="0" Cursor="IBeam" LostFocus="textBox_sil_int_LostFocus" MouseDoubleClick="textBox_sil_int_MouseDoubleClick"/>
                    <TextBox x:Name="textBox_gld_int" Height="30" Margin="438,118,0,0" Text="0" Width="65" SpellCheck.IsEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFDEDEDE" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF464646" BorderThickness="0" Cursor="IBeam" LostFocus="textBox_gld_int_LostFocus" MouseDoubleClick="textBox_gld_int_MouseDoubleClick"/>
                    <TextBox x:Name="textBox_plt_int" Height="30" Margin="438,82,0,0" Text="0" Width="65" SpellCheck.IsEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFDEDEDE" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF464646" Cursor="IBeam" LostFocus="textBox_plt_int_LostFocus" MouseDoubleClick="textBox_plt_int_MouseDoubleClick"/>
                    <TextBlock x:Name="AstVal" HorizontalAlignment="Left" Margin="238,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Foreground="#FFDEDEDE" LineHeight="22" Width="90" Text="0"/>
                    <TextBlock x:Name="CopVal" HorizontalAlignment="Left" Margin="238,193,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="30" Foreground="#FFDEDEDE" LineHeight="22" Width="90"/>
                    <TextBlock x:Name="SilVal" HorizontalAlignment="Left" Margin="238,158,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="30" Foreground="#FFDEDEDE" LineHeight="22" Width="90"/>
                    <TextBlock x:Name="GldVal" HorizontalAlignment="Left" Margin="238,123,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="30" Foreground="#FFDEDEDE" LineHeight="22" Width="90"/>
                    <TextBlock x:Name="PltVal" HorizontalAlignment="Left" Margin="238,88,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="30" Foreground="#FFDEDEDE" LineHeight="22" Width="90"/>
                    <TextBlock x:Name="TtlVal" HorizontalAlignment="Left" Margin="238,233,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="30" Foreground="#FFDEDEDE" LineHeight="22" Width="90" FontFamily="Segoe UI Black"/>
                    <Button x:Name="button_Remove" Content="Remove" HorizontalAlignment="Left" VerticalAlignment="Top" Width="85" Click="button_AddPlayer_Click" Style="{StaticResource mybutton}" Foreground="#FFDEDEDE" Height="30" Margin="53,0,0,0"/>
                    <GridSplitter x:Name="gridSplitter" Width="304" Margin="0,226,438,385" ResizeDirection="Rows" Cursor="None" Foreground="{DynamicResource lightgray_fore}" Height="2"/>
                </Grid>
            </TabItem>



        </TabControl>
        <Button x:Name="button_Open" Content="Open" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Foreground="#FFDEDEDE" Click="MenuItem_Open_Click" Height="35" Margin="61,2,0,0" Style="{StaticResource button_Menu}"/>
        <Button x:Name="button_Save" Content="Save" HorizontalAlignment="Left" Margin="131,2,0,0" VerticalAlignment="Top" Width="65" Height="35" Foreground="#FFDEDEDE" Click="MenuItem_SaveAs_Click" Style="{StaticResource button_Menu}"/>
        <Button x:Name="button_New" Content="New" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="35" Foreground="#FFDEDEDE" Click="MenuItem_New_Click"  Margin="0,2,0,0" Style="{StaticResource button_Menu}"/>
        <Button x:Name="button_Close" Content="X" VerticalAlignment="Top" Height="35" Foreground="#FFDEDEDE" Click="button_Click" HorizontalAlignment="Right" Width="30" Style="{StaticResource button_Menu}"/>
        <GridSplitter x:Name="gridSplitter_1" HorizontalAlignment="Left" Height="31" Margin="60,5,0,0" VerticalAlignment="Top" Width="1" RenderTransformOrigin="0.333,1"/>
        <GridSplitter x:Name="gridSplitter_2" HorizontalAlignment="Left" Height="31" Margin="130,5,0,0" VerticalAlignment="Top" Width="1" RenderTransformOrigin="0.333,1"/>
    </Grid>
</Window>
