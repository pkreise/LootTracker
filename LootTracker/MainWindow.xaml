<Window x:Class="LootTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LootTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000" Icon="LootTracker.ico" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" AllowsTransparency="True" WindowStyle="None">
    <Grid Background="#FF464646" MouseDown="Window_MouseDown">
        <TabControl x:Name="tabControl" Margin="10,30,10,10" BorderThickness="0" Foreground="#FF464646" Background="#FFDEDEDE" FontSize="14" FontFamily="Segoe UI Semibold">
            <TabItem Header="Items List" Background="#FFDEDEDE" Foreground="#FF464646">
                <Grid Background="#FF464646">
                    <ListView x:Name="listView" GridViewColumnHeader.Click="GridViewColumnHeaderClickedHandler" Margin="0,26,0,0" BorderThickness="0" SelectionMode="Single" Foreground="Black">
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="New" Click="NewItem_Click"/>
                                <MenuItem Header="Delete" Click="DeleteItem_Click"/>
                                <Separator/>
                                <MenuItem Header="Increment"/>
                                <MenuItem Header="Decrement"/>
                                <MenuItem Header="Assignment" Click="ModifiyAssignment_Click"/>
                            </ContextMenu>
                        </ListView.ContextMenu>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="auto" Header="Item Name" DisplayMemberBinding="{Binding itemname}"/>
                                <GridViewColumn Width="auto" Header="Item Type" DisplayMemberBinding="{Binding loottype}"/>
                                <GridViewColumn Width="auto" Header="Item Count" DisplayMemberBinding="{Binding count}"/>
                                <GridViewColumn Width="auto" Header="Unassigned Count" DisplayMemberBinding="{Binding unassignedcount}"/>
                                <GridViewColumn Width="auto" Header="Base Weight" DisplayMemberBinding="{Binding baseweight}"/>
                                <GridViewColumn Width="auto" Header="Total Weight" DisplayMemberBinding="{Binding totalweight}"/>
                                <GridViewColumn Width="auto" Header="Base Value" DisplayMemberBinding="{Binding basevalue}"/>
                                <GridViewColumn Width="auto" Header="Total Value" DisplayMemberBinding="{Binding totalvalue}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="button_NewItem" Content="New" HorizontalAlignment="Left" Margin="0,1,0,0" VerticalAlignment="Top" Width="48" Height="25" BorderThickness="0" Background="#FF464646" Foreground="#FFDEDEDE" FontSize="16" FontFamily="Segoe UI Semibold">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#FF464646"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF464646"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="button_Delete" Content="Delete" HorizontalAlignment="Left" Margin="48,1,0,0" VerticalAlignment="Top" Width="75" Height="25" BorderThickness="0" Background="#FF464646" Foreground="#FFDEDEDE" FontSize="16" FontFamily="Segoe UI Semibold">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#FF464646"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF464646"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="button_Increment" Content="Increment" HorizontalAlignment="Left" Margin="123,1,0,0" VerticalAlignment="Top" Width="95" Height="25" BorderThickness="0" Background="#FF464646" Foreground="#FFDEDEDE" FontSize="16" FontFamily="Segoe UI Semibold">
                        <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#FF464646"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF464646"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="button_Decrement" Content="Decrement" HorizontalAlignment="Left" Margin="218,1,0,0" VerticalAlignment="Top" Width="108" Height="25" BorderThickness="0" Background="#FF464646" Foreground="#FFDEDEDE" FontSize="16" FontFamily="Segoe UI Semibold" RenderTransformOrigin="0.046,0.8">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#FF464646"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF464646"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem Header="Player Roster">
                <Grid Background="#FF464646">
                    <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="button_AddPlayer_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Button x:Name="button_Close" Content="X" VerticalAlignment="Top" Height="30" Background="#FF464646" Foreground="#FFDEDEDE" BorderThickness="0" FontFamily="Segoe UI Semibold" FontSize="16" Click="button_Click" HorizontalAlignment="Right" Width="30">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#FF464646"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF464646"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="button_Open" Content="Open" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" FontSize="16" FontFamily="Segoe UI Semibold" BorderThickness="0" Background="#FF464646" Foreground="#FFDEDEDE" Click="MenuItem_Open_Click" Height="25" Margin="50,0,0,0">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#FF464646"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF464646"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="button_Save" Content="Save" HorizontalAlignment="Left" Margin="110,0,0,0" VerticalAlignment="Top" Width="50" Height="25" FontSize="16" FontFamily="Segoe UI Semibold" Foreground="#FFDEDEDE" Click="MenuItem_Open_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#FF464646"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF464646"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="button_New" Content="New" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" RenderTransformOrigin="-0.067,-0.25" Height="25" Background="#FF464646" Foreground="#FFDEDEDE" FontSize="16" FontFamily="Segoe UI Semibold" BorderThickness="0" Click="MenuItem_New_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#FF464646"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF464646"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
