<Window x:Class="LootTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LootTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">
    <Grid>
        <Menu x:Name="menu" Height="25" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open LootBook" Click="MenuItem_Click"/>
                <MenuItem Header="New LootBook" Click="MenuItem_Click_2"/>
                <MenuItem Header="Save LootBook" Click="MenuItem_Click_1"/>
            </MenuItem>
            <MenuItem Header="Players">
                <MenuItem Header="Add Player" Click="MenuItem_Click_3"/>
            </MenuItem>
            <MenuItem/>
        </Menu>
    </Grid>
</Window>
